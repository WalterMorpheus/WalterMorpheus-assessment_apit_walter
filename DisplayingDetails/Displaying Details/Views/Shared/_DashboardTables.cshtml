@model DashboardViewModel

<div class="text-center">
    <h3 class="display-7">Number of Users overall across the clients: @Model.MaxUserCount </h3>
</div>


<div class="container mt-4">
    <h2 class="mb-4">Number of users per location</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Location</th>
                <th>User Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.UsersPerLocations!)
            {
                <tr>
                    <td>@product.Location</td>
                    <td>@product.UserCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container mt-4">
    <h2 class="mb-4">Number of Clients created per Date</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>DateRegistered</th>
                <th>User Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ClientsCreatedPerDate!)
            {
                <tr>
                    <td>@product.DateRegistered</td>
                    <td>@product.UserCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
